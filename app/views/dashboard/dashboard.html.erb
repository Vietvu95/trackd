<html class="dashboard">
<body class="dashboard">
  <div class="container-dash">
    <aside>
      <div class="top">
        <div class="logo-dash">
          <h2><span class="danger">T</span>rackd</h2>
        </div>
        <div class="close" id="close-btn">
          <span><i class="material-icons sharp">close</i></span>
        </div>
      </div>

      <div class="sidebar">
        <a href="">
          <span><i class="material-icons sharp">grid_view</i></span>
          <h3>Dashboard</h3>
        </a>

        <a href="" class="active">
          <span><i class="material-icons sharp">person_outline</i></span>
          <h3>Dashboard</h3>
        </a>

          <a href="">
          <span><i class="material-icons sharp">add</i></span>
          <h3>Add Product</h3>
        </a>
      </div>
    </aside>
    <!-- End of aside -->
    <!-- Beginning main section-->
    <main>
      <h1>Dashboard</h1>
      <div class="date">
        <input type="date">
      </div>
    <!-- Strt of insights -->
      <div class="insights">
      <!-- Start Sales -->
        <div class="sales">
          <span><i class="material-icons sharp">analytics</i></span>
          <div class="middle">
            <div class="left">
              <h3>Portfolio Value </h3>
              <h1><%= @total_current_value %></h1>
            </div>
            <div class="progress-dash">
              <svg>
                <circle cx="38" cy="38" r="36"></circle>
              </svg>
              <div class="number">
                <p>81%</p>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
        <!-- End of Sales -->

        <!-- Start Expenses-->
        <div class="expenses">
          <span><i class="material-icons sharp">bar_chart</i></span>
          <div class="middle">
            <div class="left">
              <h3>Total Spent</h3>
              <h1><%= @total_purchase_value %></h1>
            </div>
            <div class="progress-dash">
              <svg>
                <circle cx="38" cy="38" r="36"></circle>
              </svg>
              <div class="number">
                <p>81%</p>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
  <!-- End Expenses-->

    <!-- Start Incomes-->
        <div class="income">
          <span><i class="material-icons sharp">stacked_line_chart</i></span>
          <div class="middle">
            <div class="left">
              <h3>Profits/Losses</h3>
              <h1><%=@total_pl  %></h1>
            </div>
            <div class="progress-dash">
              <svg>
                <circle cx="38" cy="38" r="36"></circle>
              </svg>
              <div class="number">
                <p>44%</p>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
  <!-- End of Incomes-->
      </div>
      <!-- End of insights -->
  <div class="recent-orders">
    <h2>Cryptocurrency Prices by Market Cap</h2>
    <table>
      <thead>
        <tr>
          <th>Symbol</th>
          <th>Current Price</th>
          <th>Quantity</th>
          <th>Profit/Loss</th>
        </tr>
      </thead>
      <tbody>
        <% @portfolio_assets.each do |pa| %>
          <tr>
            <td><%= pa.asset.name %></td>
            <td>$<%= pa.get_current_price %></td>
            <td class="warning"><%= pa.quantity %></td>
            <td class="primary">$<%= pa.profit_and_loss %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <a href="#">Show All</a>
  </div>
    </main>
    <!-- End of main section -->

    <!-- START Right side -->
<div class="right">
  <div class="top">
    <button id="menu-btn">
    <span><i class="material-icons sharp">menu</i></span>
    </button>
    <div class="theme-toggler">
      <span class="active"><i class="material-icons sharp">light_mode</i></span>
      <span><i class="material-icons sharp">dark_mode</i></span>
    </div>
    <div class="profile">
      <div class="info">
        <p>Hey, <b>Euclides</b></p>
        <small class="text-muted">Your, portfolio</small>
      </div>
      <div class="profile-dash-photo">
        <%= image_tag "https://mdbootstrap.com/img/new/avatars/2.jpg", :class => "pro-photo" %>
      </div>
    </div>
  </div>

<div class="recent-updates">
