  </div>
</div>
  <!-- End of updates update -->
  <div class="sales-analytics">
    <h2>Market movements</h2>
    <div class="item online">
      <div class="icon">
        <span><i class="material-icons sharp">insights</i></span>
      </div>
      <div class="right">
        <h3>SHOWING LINE CHART</h3>
        <small class="text-muted">Last 24 Hours</small>
      </div>
      <h5 class="success">+39%</h5>
      <h3>Your P/L: 3849</h3>
    </div>


    <div class="item offline">
      <div class="icon">
        <span><i class="material-icons sharp">bar_chart</i></span>
      </div>
      <div class="right">
        <h3>SHOWING BAR CHART</h3>
        <small class="text-muted">Last 24 Hours</small>
      </div>
      <h5 class="danger">-100%</h5>
      <h3>Your P/L: -9000</h3>
    </div>

      <div class="item customer">
      <div class="icon">
        <span><i class="material-icons sharp">person</i></span>
      </div>
      <div class="right">
        <h3>SHOWING Your P/L</h3>
        <small class="text-muted">Last 24 Hours</small>
      </div>
      <h5 class="danger">-10%</h5>
      <h3>Your P/L: 9000</h3>
    </div>

   <div class="item add-product">
      <div>
        <span><i class="material-icons sharp">add</i></span>
        <h3>Showing your crypto</h3>
      </div>
    </div>

  </div>

  </div>
  <!-- Start sales analytics -->

</div>
    <!-- End of right side -->
  </div>

<!-- Javascript-->
<script>
  const sideMenu = document.querySelector("aside");
  const menuBtn = document.querySelector("#menu-btn");
  const closeBtn = document.querySelector("#close-btn");
  const themeToggler = document.querySelector(".theme-toggler");

  menuBtn.addEventListener('click', () => {
    sideMenu.style.display = 'block';
  })

  closeBtn.addEventListener('click', () => {
    sideMenu.style.display = 'none';
  })

  themeToggler.addEventListener('click', () => {
    document.body.classList.toggle('dark-theme-variables');

    themeToggler.querySelector('span:nth-child(1)').classList.toggle('active');
    themeToggler.querySelector('span:nth-child(2)').classList.toggle('active');
  })



</script>

